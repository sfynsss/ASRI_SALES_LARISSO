<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TableLayout
        android:id="@+id/table_data_kunjungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/sales_bg_kunjungan_adapter">

        <TableRow
            android:id="@+id/table_list_kunjungan"
            android:weightSum="5">
            <TableLayout
                android:layout_weight="4.5">
                <TableRow
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <TextView
                        android:layout_weight="1"
                        android:text="No. Faktur"
                        android:textStyle="bold"
                        android:textColor="#28306D"/>
                    <TextView
                        android:id="@+id/no_ent_tmp"
                        android:layout_weight="3"
                        android:textColor="#FF5949"
                        android:text=": 010001"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <TextView
                        android:layout_weight="1"
                        android:text="Nama Cust"
                        android:textStyle="bold"
                        android:textColor="#28306D"/>
                    <TextView
                        android:id="@+id/nm_customer_tmp"
                        android:layout_weight="3"
                        android:text=": AGUS"
                        android:textColor="#FF5949"/>
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <TextView
                        android:layout_weight="1"
                        android:text="Tgl"
                        android:textStyle="bold"
                        android:textColor="#28306D"/>
                    <TextView
                        android:id="@+id/tgl_order_tmp"
                        android:layout_weight="3"
                        android:textColor="#FF5949"
                        android:text=": 05/18/2018"/>
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL"
                    android:textStyle="bold"
                    android:textColor="#28306D"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#72D5A9"
                    android:text="100.000"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>