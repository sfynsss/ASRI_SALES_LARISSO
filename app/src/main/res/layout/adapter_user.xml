<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/list_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="15dp">
        <ImageView
            android:id="@+id/image_listview"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/text_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/image_listview"
            android:layout_toRightOf="@+id/image_listview"
            android:textColor="#131313"
            android:textSize="22dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_listview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_listview"
            android:layout_toEndOf="@+id/image_listview"
            android:layout_toRightOf="@+id/image_listview"
            android:paddingLeft="5dp"
            android:textColor="#494949"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </RelativeLayout>

</LinearLayout>
